<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">


    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="314dp"
        android:layout_height="46dp"


        android:layout_marginTop="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Write phone number here"
        android:drawableStart="@drawable/phone"
        android:drawablePadding="3dp"
        />


    <EditText
        android:id="@+id/verification_input"
        android:layout_width="314dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:drawableStart="@drawable/password"
        android:hint="Write verification code here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_number_input"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/send_verification_button"
        android:layout_width="258dp"
        android:layout_height="48dp"
        android:layout_marginTop="28dp"
        android:background="#8BC34A"
        android:textColor="#FFF"


        android:text="Send Verification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verification_input" />

    <Button
        android:id="@+id/verify_button"
        android:layout_width="258dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:background="#8BC34A"


        android:text="Verify"
        android:textColor="#FFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/send_verification_button"
        android:visibility="invisible"
        />
</androidx.constraintlayout.widget.ConstraintLayout>